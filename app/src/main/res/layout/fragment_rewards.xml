<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav.rewards.RewardsFragment">


    <TextView
        android:id="@+id/third_reward_description"
        android:layout_width="182dp"
        android:layout_height="45dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="@string/third_reward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_reward_description" />

    <TextView
        android:id="@+id/second_reward_description"
        android:layout_width="182dp"
        android:layout_height="45dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        android:text="@string/second_reward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_reward_description" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toEndOf="@+id/coins5"
        app:layout_constraintTop_toBottomOf="@+id/third_reward" />

    <TextView
        android:id="@+id/coins5"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="16dp"
        android:contentDescription="15"
        android:gravity="right"
        android:text="15"
        android:textColor="?colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_reward"
        tools:text="15" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toEndOf="@+id/coins4"
        app:layout_constraintTop_toBottomOf="@+id/second_reward" />

    <TextView
        android:id="@+id/coins4"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="16dp"
        android:contentDescription="10"
        android:gravity="right"
        android:text="10"
        android:textColor="?colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_reward"
        tools:text="10" />

    <TextView
        android:id="@+id/coins2"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="16dp"
        android:contentDescription="5"
        android:gravity="right"
        android:text="5"
        android:textColor="?colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_reward"
        tools:text="5" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toEndOf="@+id/coins2"
        app:layout_constraintTop_toBottomOf="@+id/first_reward" />

    <TextView
        android:id="@+id/coins"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="100dp"
        android:gravity="right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toEndOf="@+id/coins"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/first_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="84dp"
        android:text="@string/claim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coins" />

    <Button
        android:id="@+id/second_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="84dp"
        android:text="@string/claim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_reward" />

    <Button
        android:id="@+id/third_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="84dp"
        android:text="@string/claim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_reward" />

    <TextView
        android:id="@+id/first_reward_description"
        android:layout_width="182dp"
        android:layout_height="45dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        android:text="@string/first_reward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

</androidx.constraintlayout.widget.ConstraintLayout>