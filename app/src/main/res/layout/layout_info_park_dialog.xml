<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Nome do parque de estacionamento"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ocupação:"
            android:gravity="right"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/occupation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50%"
            android:gravity="center"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Preço por hora:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pricePerHour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R$ 2,00"
            android:gravity="center"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coverage_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Coberto:"
            android:gravity="right"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/coverage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sim"
            android:gravity="center"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Coberto:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_covered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sim"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/reserve_button"
                android:layout_width="110dp"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:text="Reserve"
                android:layout_marginTop="20dp"
                android:textColor="?attr/colorPrimary"/>


            <Button
                android:id="@+id/directions_button"
                android:layout_width="129dp"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:text="Directions"
                android:layout_marginTop="20dp"
                android:textColor="?attr/colorPrimary"/>

            <Button
                android:id="@+id/report_button"
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:text="Report"
                android:layout_marginTop="20dp"
                android:textColor="?attr/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

