<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav.rewards.RewardsFragment">


    <TextView
        android:id="@+id/OLAParkCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:text="@string/OLAParkCoins"
        app:layout_constraintStart_toEndOf="@+id/number_OLAParkCoins"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_OLAParkCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="96dp"
        android:text="@string/number_OLAParkCoins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/reward1"
        android:layout_width="320dp"
        android:layout_height="118dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OLAParkCoins" />

    <View
        android:id="@+id/reward2"
        android:layout_width="320dp"
        android:layout_height="118dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/reward3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reward1"
        app:layout_constraintVertical_bias="0.037" />

    <View
        android:id="@+id/reward3"
        android:layout_width="320dp"
        android:layout_height="118dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>